@model OutOfOfficeHRApp.Models.Project;

@{
    ViewData["Title"] = "Edit project";
}
<div class="text-center">
    <h2>Edit project</h2>
</div>
<br />

<div class="row justify-content-around">
    <div class="col-md-9">
        <form asp-action="EditProject" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group d-flex align-items-center">
                <label asp-for="ProjectManagerID" class="control-label col-sm-2"></label>
                <select asp-for="ProjectManager" class="form-control" asp-items="ViewBag.ProjectManager"></select>
            </div>
        </form>
    </div>
</div>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProjectManager)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => modelItem.ProjectManager.FullName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProjectType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => modelItem.ProjectType.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsActive)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayTextFor(modelItem => modelItem.IsActive)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Comment)
    </dt>
    <dd class="col-sm-10" style="height: 170px; overflow: auto">
        @Html.DisplayFor(modelItem => modelItem.Comment)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Employees)
    </dt>
    <dd class="col-sm-10" style="height: 170px; overflow: auto">
        <div class="row">
            @foreach (var employee in Model.Employees)
            {
                <div class="col-sm-3">
                    <ul>
                        <li>
                            @employee.FullName
                        </li>
                    </ul>
                </div>
            }
        </div>
    </dd>
</dl>
<a class="btn btn-secondary" asp-action="Index">Back to List</a>

<div class="row justify-content-around">
    <div class="col-md-9">
        <form asp-action="EditProject" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" />
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="ProjectManagerID" class="control-label col-sm-2"></label>
                <select asp-for="ProjectManager" class="form-control" asp-items="ViewBag.ProjectManager"></select>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="ProjectTypeID" class="control-label col-sm-2"></label>
                <select asp-for="ProjectType" class="form-control" asp-items="ViewBag.ProjectType"></select>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="Comment" class="control-label col-sm-2"></label>
                <textarea asp-for="Comment" class="col-sm-10" style="height: 170px; overflow: auto"></textarea>
            </div>
            <div class="form-group d-flex align-items-center"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


