@model OutOfOfficeHRApp.Models.Project;

@{
    ViewData["Title"] = "Project details";
}

<h1>Project details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ProjectManager.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ProjectType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(modelItem => modelItem.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10" style="height: 170px; overflow: auto">
            @Html.DisplayFor(modelItem => modelItem.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10" style="height: 170px; overflow: auto">
            <div class="row">
                @foreach (var employee in Model.Employees)
                {
                    <div class="col-sm-3">
                        <ul>
                            <li>
                                @employee.FullName
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </dd>
    </dl>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>




