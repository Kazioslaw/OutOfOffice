@model OutOfOfficeHRApp.Models.Project

@{
    ViewData["Title"] = "Add project";
}

<div class="text-center">
    <h3>Add new project</h3>
</div>
<br />

<div class="row justify-content-center">
    <div class="col-md-9">
        <form asp-action="AddProject" method="post">
            <div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="ProjectTypeID" class="control-label col-sm-2"></label>
                    <select asp-for="ProjectTypeID" class="form-control" asp-items="ViewBag.ProjectType">
                        <option value="" hidden>Select project type</option>
                    </select>
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="StartDate" class="control-label col-sm-2"></label>
                    <input type="date" asp-for="StartDate" class="form-control" />
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="EndDate" class="control-label col-sm-2"></label>
                    <input type="date" asp-for="EndDate" class="form-control" />
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="ProjectManagerID" class="control-label col-sm-2"></label>
                    <select asp-for="ProjectManagerID" class="form-control" asp-items="ViewBag.ProjectManager">
                        <option value="" hidden>Select project type</option>
                    </select>
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="Comment" class="control-label col-sm-2"></label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between">
                    <a class="btn btn-secondary" asp-action="Index">
                        Back to list
                    </a>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>