@model OutOfOfficeHRApp.Models.ApprovalRequest

@{
    ViewData["Title"] = "Approve";
}

<h1>Approve</h1>

<h3>Are you sure you want to approve this leave request?</h3>
<hr />

<div class="my-2">
    <dl class="row">
        <dt class="col-sm-2 align-content-center">
            @Html.DisplayNameFor(model => model.LeaveRequest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.LeaveRequestID)
        </dd>
        <dt class="col-sm-2 align-content-center">
            @Html.DisplayNameFor(model => model.LeaveRequest.Employee)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.LeaveRequest.Employee.FullName)
        </dd>
        <dt class="col-sm-2 align-content-center">
            @Html.DisplayNameFor(model => model.LeaveRequest.AbsenceReason)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.LeaveRequest.AbsenceReason.Name)
        </dd>
        <dt class="col-sm-2 align-content-center">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="Comment" class="form-control">@Html.DisplayFor(modelItem => modelItem.Comment)</textarea>
        </dd>
    </dl>

    <form asp-action="Approve">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Approve" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Index">Back to list</a>
    </form>
</div>