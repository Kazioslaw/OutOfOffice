@model OutOfOfficeHRApp.Models.ApprovalRequest;

@{
    ViewData["Title"] = "Reject request";
}

<h1>Reject</h1>
<h3>Are you sure you want to reject this request?</h3>
<hr />

<div class="my-2">
    <form asp-action="Reject" asp-for="@Model.ID">
        <dl class="row">
            <dt class="col-sm-2 align-content-center">
                @Html.DisplayNameFor(model => model.LeaveRequest.Employee.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LeaveRequest.Employee.FullName)
            </dd>
            <dt class="col-sm-2 align-content-center">
                @Html.DisplayNameFor(model => model.LeaveRequest.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LeaveRequest.StartDate)
            </dd>
            <dt class="col-sm-2 align-content-center">
                @Html.DisplayNameFor(model => model.LeaveRequest.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LeaveRequest.EndDate)
            </dd>
            <dt class="col-sm-2 align-content-center">
                @Html.DisplayNameFor(model => model.LeaveRequest.AbsenceReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LeaveRequest.AbsenceReason.Name)
            </dd>
            <dt class="col-sm-2 align-content-center">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                <textarea asp-for="Comment" placeholder="Insert reasons..." class="form-control"></textarea>
            </dd>

        </dl>
        <button class="btn btn-danger">Reject</button>
        <a class="btn btn-secondary" asp-action="Index">Back to list</a>
    </form>
</div>


