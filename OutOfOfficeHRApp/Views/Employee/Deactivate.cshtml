@model OutOfOfficeHRApp.Models.Employee

@{
    ViewData["Title"] = "Deactivate";
}

<h1>Deactivate</h1>

<h3>Are you sure you want to deactivate this Employee?</h3>
<hr />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subdivision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subdivision.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PeoplePartner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeoplePartner.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OutOfOfficeBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OutOfOfficeBalance) @(Model.OutOfOfficeBalance == 1 ? "day" : "days")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.PhotoPath" style="max-height: 256px; max-width:256px" />
        </dd>
    </dl>

    <form asp-action="Deactivate">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Deactivate" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
