@model OutOfOfficeHRApp.Models.Employee

@{
    ViewData["Title"] = "Employee details";
}

<h1>Employee details</h1>
<br />

<div class="justify-content-center">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subdivision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Subdivision.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Position.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Project.ProjectType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Active" : "Inactive")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PeoplePartner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.PeoplePartner.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OutOfOfficeBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.OutOfOfficeBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PhotoPath?.Length > 0)
            {
                <img src="@Model.PhotoPath" style="max-height: 256px; max-width: 256px" />
            }
        </dd>
    </dl>
    <a class="btn btn-secondary" asp-action="Index">Back to list</a>
</div>