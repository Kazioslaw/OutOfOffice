@model OutOfOfficeHRApp.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h2>Edit employee</h2>
</div>
<br />
<div class="row justify-content-around">
    <div class="col-md-9">
        <form asp-action="EditEmployee" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group d-flex align-items-center">
                <label asp-for="FullName" class="control-label col-sm-2"></label>
                <div class="flex-grow-1">
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="SubdivisionID" class="control-label col-sm-2"></label>
                <select asp-for="SubdivisionID" class="form-control" asp-items="ViewBag.SubdivisionID"></select>
                <span asp-validation-for="SubdivisionID" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="PositionID" class="control-label col-sm-2"></label>
                <select asp-for="PositionID" class="form-control" asp-items="ViewBag.PositionID"></select>
                <span asp-validation-for="PositionID" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="IsActive" class="control-label col-sm-2"></label>
                <select asp-for="IsActive" class="form-control" asp-items="ViewBag.Status"></select>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="PeoplePartnerID" class="control-label col-sm-2"></label>
                <select asp-for="PeoplePartnerID" class="form-control" asp-items="ViewBag.PeoplePartnerID"></select>
                <span asp-validation-for="PeoplePartnerID" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="OutOfOfficeBalance" class="control-label col-sm-2"></label>
                <input asp-for="OutOfOfficeBalance" class="form-control" type="number" />
                <span asp-validation-for="OutOfOfficeBalance" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center my-3 text-right">
                <label asp-for="Photo" class="control-label col-sm-2"></label>
                <input asp-for="Photo" class="form-control" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div class="form-group d-flex align-items-center my-3">
                    <label class="control-label col-sm-2">Current Photo:</label>
                    <div class="col-sm-10">
                        <div>
                            <img src="@Model.PhotoPath" alt="Employee photo" class="img-thumbnail" style="max-width: 256px; max-height: 256px" />
                            <button type="button" class="btn btn-danger ms-3 remove-photo-btn"
                                    onclick="RemovePhoto(@Model.ID)">
                                <i class="bi bi-trash"></i> Usuń zdjęcie
                            </button>
                        </div>

                    </div>
                </div>
            }

            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function RemovePhoto(id) {
        const token = getCsrfToken();

        $.ajax({
            url: `${id}/RemovePhoto`,
            type: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestToken': token
            },
            success: function (data) {
                alert(data);
                window.location.reload();
            },
            error: function (xhr, status, error) {
                console.error('Error: ', error)
                alert('Token znów nie działa');
            }
        })
    }
    function Remove(Data) {
        alert(Data);
        window.location.reload()
    }
    function getCsrfToken() {
        const tokenCookie = document.cookie.split('; ').find(row => row.startsWith('XSRF='));
        return tokenCookie ? tokenCookie.split('=')[1] : '';
    }

</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
