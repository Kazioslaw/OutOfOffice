@model OutOfOfficeHRApp.Models.LeaveRequest

@{
    ViewData["Title"] = "Add request";
}

<div class="text-center">
    <h3>Add new request</h3>
</div>

<br />

<div class="row justify-content-center">
    <div class="col-md-9">
        <form asp-action="AddLeaveRequest" method="post">
            <div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="EmployeeID" class="control-label col-sm-2"></label>
                    <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.Employee">
                        <option value="" hidden>Select employee</option>
                    </select>
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="AbsenceReasonID" class="control-label col-sm-2"></label>
                    <select asp-for="AbsenceReasonID" class="form-control" asp-items="ViewBag.AbsenceReason">
                        <option value="" hidden>Select absence reason</option>
                    </select>

                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="StartDate" class="control-label col-sm-2"></label>
                    <input type="date" min="1999-01-01" max="2050-12-31" asp-for="StartDate" class="form-control" />
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="EndDate" class="control-label col-sm-2"></label>
                    <input type="date" min="1999-01-01" max="2050-12-31" asp-for="EndDate" class="form-control" />
                </div>
                <div class="form-group d-flex align-items-center my-3">
                    <label asp-for="Comment" class="control-label col-sm-2"></label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between">
                    <a class="btn btn-secondary" asp-action="Index">
                        Back to List
                    </a>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>