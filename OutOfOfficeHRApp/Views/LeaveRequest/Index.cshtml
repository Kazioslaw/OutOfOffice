@model IEnumerable<OutOfOfficeHRApp.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Request List";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Leave request list</h1>
    <a class="btn btn-primary" asp-controller="LeaveRequest" asp-action="Create"><i class="bi bi-clipboard-plus"></i></a>
</div>

<table class="table">
    <thead>
        <tr class="text-center">
            <th class="col-sm-1"></th>
            <th>@Html.DisplayNameFor(model => model.Employee)</th>
            <th>@Html.DisplayNameFor(model => model.AbsenceReason)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th class="col-sm-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ID).
                </td>
                <td>@Html.DisplayFor(modelItem => item.Employee.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.AbsenceReason.Name)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a class="btn btn-secondary"></a>
                    <a class="btn btn-danger"></a>
                </td>
            </tr>
        }
        <tr>
            <td class="text-center">1</td>
            <td>2</td>
            <td>3</td>
            <td class="text-center">4</td>
            <td class="text-center">5</td>
            <td class="text-center">6</td>
            <td>
                <a class="btn btn-secondary"></a>
                <a class="btn btn-danger"></a>
            </td>
        </tr>
    </tbody>
</table>