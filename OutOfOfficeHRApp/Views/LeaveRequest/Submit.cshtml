@model OutOfOfficeHRApp.Models.LeaveRequest;

<h1>Submit</h1>

<h3>Are you sure you want to submit this leave request?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AbsenceReasonID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AbsenceReason.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Comment)
        </dd>
    </dl>

    <form asp-action="Submit">
        <a class="btn btn-secondary" asp-action="Index">Back to list</a>
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Submit" class="btn btn-primary" />
    </form>
</div>